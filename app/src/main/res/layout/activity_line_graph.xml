            android:contentDescription="Scatter chart 3 showing data"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Scatter chart 4 showing data"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Scatter chart 5 showing data"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Scatter chart 6 showing data"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart7"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Scatter chart 7 showing data"/>

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart8"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="Scatter chart 8 showing data"/>

    </LinearLayout>
</ScrollView>